* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background: #1a1a1a;
    color: #ffffff;
    overflow: hidden;
}

#container {
    display: flex;
    height: 100vh;
}

#control-panel {
    width: 300px;
    background: #2d2d2d;
    padding: 20px;
    overflow-y: auto;
    border-right: 2px solid #444;
}

#control-panel h2 {
    color: #4CAF50;
    margin-bottom: 20px;
    text-align: center;
}

#control-panel h3 {
    color: #81C784;
    margin: 15px 0 10px 0;
    border-bottom: 1px solid #444;
    padding-bottom: 5px;
}

.connection-status {
    text-align: center;
    padding: 10px;
    background: #333;
    border-radius: 5px;
    margin-bottom: 20px;
}

.movement-controls {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px;
    max-width: 200px;
    margin: 0 auto;
}

.movement-controls button {
    padding: 15px;
    background: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 18px;
    transition: background 0.3s;
}

.movement-controls button:hover {
    background: #45a049;
}

.movement-controls button:active {
    background: #3d8b40;
}

.movement-controls #forward {
    grid-column: 2;
}

.movement-controls #backward {
    grid-column: 2;
}

.movement-controls #stop {
    background: #f44336;
}

.movement-controls #stop:hover {
    background: #da190b;
}

label {
    display: block;
    margin: 10px 0;
}

input[type="range"] {
    width: 100%;
    margin: 5px 0;
}

select {
    width: 100%;
    padding: 5px;
    background: #444;
    color: white;
    border: 1px solid #666;
    border-radius: 3px;
}

#robot-view {
    flex: 1;
    position: relative;
    background: #000;
}

#three-container {
    width: 100%;
    height: 100%;
}

#view-controls {
    position: absolute;
    top: 10px;
    right: 10px;
    display: flex;
    gap: 10px;
}

#view-controls button {
    padding: 8px 12px;
    background: rgba(76, 175, 80, 0.8);
    color: white;
    border: none;
    border-radius: 3px;
    cursor: pointer;
    transition: background 0.3s;
}

#view-controls button:hover {
    background: rgba(76, 175, 80, 1);
}

.sensor-data div {
    background: #333;
    padding: 8px;
    margin: 5px 0;
    border-radius: 3px;
    font-family: monospace;
}

.robot-config select {
    margin-top: 5px;
}

/* Responsive design */
@media (max-width: 768px) {
    #container {
        flex-direction: column;
    }
    
    #control-panel {
        width: 100%;
        height: 40vh;
    }
    
    #robot-view {
        height: 60vh;
    }
}